extends ./base.jade

block title
	title Edit Request

block content
	.text-left
	form(method='POST', action='/requests/'+id+'/edit')
		.row
			.col-md-6
				.row
					.col-md-12
						h1.text-left Edit Service Request
				.row
					.col-md-8
						//title
						input.form-control.input-normal(type='text', name='title', placeholder='Title', required, autofocus, value=title)
						p
				.row
					.col-md-12
						//Leave in the random caret
						textarea.form-control(name='description', placeholder='Description', rows='5')
							| #{description}
						p
						input.form-control(type='text', name='address', placeholder='Address', value=address)
						p
				.row
					.col-md-6
						//Time of job
						input.form-control.input-normal(type='text', name='time', placeholder='Time', required, value=schedule)
						p
				.row
					.col-md-2
						button.btn.btn-primary.btn-block.btn-signin(type='submit') Submit
			.col-md-6
				.row
					.col-md-12.text-left
						h2 Workers:
						each worker in workers
							.row.col-md-12
								input(type='checkbox', name='workers', value=worker) 
								|  #{worker}