extends ./base.jade

block title
	title Edit Request

block content
	.text-left
	form(method='POST', action='/requests/'+id+'/edit')
		.row
			.col-md-6
				.row
					.col-md-12
						h1.text-left Edit Service Request
				.row
					.col-md-8
						//title
						input.form-control.input-normal(type='text', name='title', placeholder='Title', maxlength="50", required, autofocus, value=title)
						p
				.row
					.col-md-12
						//Leave in the random caret
						textarea.form-control(name='description', placeholder='Description', rows='5')
							| #{description}
						p
						input.form-control(type='text', name='address', placeholder='Address', maxlength="100", value=address)
						p
					
				a(href='/'+id+'/schedule') Change Schedule
									br

					.col-md-2
						button.btn.btn-primary.btn-block.btn-signin(type='submit') Submit
										.row