extends ./base.jade

block title
	title Pending

block content
	if requests
		each res in requests
			.col-md-6
				ul.list-group
					h4.list-group-item.list-group-item-info
						a(href='/pending/'+'#{res[0]}') #{res[2]}
					p.list-group-item 
						b Client: 
						a(href='/profile/'+res[1]) #{res[1]}
					.list-group-item 
						.text-center
							b Tag: 
							span.badge(style="text-align: left;") #{res[7]}
					p.list-group-item 
						b Address: 
						#{res[4]}
					if res[5]
						form(method='post', action='/pending/'+'#{res[0]}'+'/accept')
							button.btn.btn-lg.btn-success.btn-block(type='submit') Set Not Interested
					else
						form(method='post', action='/pending/'+'#{res[0]}'+'/accept')
							button.btn.btn-lg.btn-danger.btn-block(type='submit') Set Interested
	else
		h4 No results found
