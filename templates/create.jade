extends ./base.jade

block title
	title Create Request

block content
	.text-left
		h1 Create Service Request
	form(method='POST', action='/create')
		.row
			.col-md-4
				//title
				input.form-control.input-normal(type='text', id='title', placeholder='Title', required)
		.row
			.col-md-6
				textarea.form-control(id='description', placeholder='Description', rows='5')
		.row
			.col-md-3
				//Time of job
				input.form-control.input-normal(type='text', id='time', placeholder='Time', required)
		.row
			.col-md-1
				button.btn.btn-primary.btn-block.btn-signin(type='submit') Submit